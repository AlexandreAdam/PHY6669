@article{Wesson1987,
abstract = {There appears to be widespread confusion as to why the intensity of the extragalactic background light (EBL) is low. This concerns in particular the relative importance of factors associated with the lifetime of the galaxies and the expansion of the universe. To remedy this, an improved derivation is given of the main relations for the EBL. Then a new method is used to show explicitly what effect the expansion has on the EBL in Friedmann-Robertson-Walker models. It is thereby confirmed that the intensity of intergalactic light is determined to order of magnitude by the lifetime of the galaxies and only affected by a factor of about 2 by the expansion of the universe.},
author = {Wesson, Paul S. and Valle, K. and Stabell, R.},
doi = {10.1086/165306},
file = {:home/alexandre/.local/share/data/Mendeley Ltd./Mendeley Desktop/Downloaded/Wesson, Valle, Stabell - 1987 - The extragalactic background light and a definitive resolution of Olbers's paradox.pdf:pdf},
issn = {0004-637X},
journal = {The Astrophysical Journal},
keywords = {Subject headings,cosmic background radiation-cosmology-galaxies,intergalactic medium-galaxies,photometry-relativity},
month = {jun},
pages = {601},
publisher = {American Astronomical Society},
title = {{The extragalactic background light and a definitive resolution of Olbers's paradox}},
url = {https://ui.adsabs.harvard.edu/abs/1987ApJ...317..601W/abstract},
volume = {317},
year = {1987}
}
