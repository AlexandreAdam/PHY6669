@techreport{Wesson1991,
abstract = {In this paper, the intensity of the extragalactic background light (EBL) due to stars in galaxies is calculated, first in expanding uniform cosmological models and then in equivalent static models, making it possible to separate the influence of the expansion of the universe from that of the age of galaxies. It is shown that the EBL intensity is proportional to the age of the galaxies in a static model. However, the intensity also depends on the speed of light, the luminosity density of galaxies, and the form of a typical galaxy spectrum. The redshift effect present in the expression for an expanding model only causes a reductiomn of 3-4, confirming the conclusion of Harrison (1977, 1981) concerning the Olbers's paradox. Theoretical values for the intensity were found to agree with presently available limits on the EBL from observations.},
author = {Wesson, Paul S.},
booktitle = {The Astrophysical Journal},
doi = {10.1086/169638},
file = {:home/alexandre/.local/share/data/Mendeley Ltd./Mendeley Desktop/Downloaded/Wesson - 1991 - OLBERS'S PARADOX AND THE SPECTRAL INTENSITY OF THE EXTRAGALACTIC BACKGROUND LIGHT.pdf:pdf},
issn = {0004-637X},
keywords = {Subject headings,cosmic background radiation-cosmology-galaxies,photometry-relativity},
pages = {399},
title = {{Olbers's paradox and the spectral intensity of the extragalactic background light}},
volume = {367},
year = {1991}
}
